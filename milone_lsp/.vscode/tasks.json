{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "milone_lsp_build",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "--no-restore",
                "--nologo"
            ],
            "group": "build"
        },
        {
            "label": "vscode_ext_build",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "webpack-build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/../vscode_ext"
            },
            "dependsOn": "milone_lsp_build"
        }
    ]
}